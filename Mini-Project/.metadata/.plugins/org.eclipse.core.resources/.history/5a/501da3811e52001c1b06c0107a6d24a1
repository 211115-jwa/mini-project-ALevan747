		interface Animal {
			public void animalNoise();
		}
		
		class Cow implements Animal {
			public void animalNoise() {
				System.out.println("Mooo");
			}
			
		class Snake implements Animal {
			public void animalNoise() {
				System.out.println("Hiss");
			}
				
		class Dog implements Animal {
